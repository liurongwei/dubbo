<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <dubbo:application name="demo-provider"/>
    <dubbo:registry protocol="zookeeper" address="192.168.87.10:30595" check="true"/>
    <dubbo:protocol name="dubbo" port="-1"/>
    <dubbo:provider threadpool="fixed"
                    threads="500"
                    timeout="5000"
                    retries="2"/>
    <dubbo:service interface="com.snowman.service.DemoService"
                   timeout="5000"
                   retries="1"
                   group="snowman"
                   version="1.0.0"
                   ref="demoService">

    </dubbo:service>
    <dubbo:service interface="com.snowman.service.UserService"
                   timeout="5000"
                   retries="1"
                   group="snowmanDemo"
                   version="1.0.0"
                   ref="userService">
    </dubbo:service>
    <bean id="demoService" class="com.snowman.serviceImpl.DemoServiceImpl"/>
    <bean id="userService" class="com.snowman.serviceImpl.UserServiceImpl"/>
</beans>
